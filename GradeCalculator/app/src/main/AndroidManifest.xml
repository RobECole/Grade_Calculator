<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevin.gradecalculator" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddSemester"
            android:label="@string/title_activity_add_semester" >
        </activity>
        <activity
            android:name=".RemoveSemester"
            android:label="@string/title_activity_remove_semester" >
        </activity>
        <activity
            android:name=".ShowCourses"
            android:label="@string/title_activity_course_view" >
        </activity>
        <activity
            android:name=".AddCourse"
            android:label="@string/title_activity_add_course" >
        </activity>
        <activity
            android:name=".RemoveCourse"
            android:label="@string/title_activity_remove_course" >
        </activity>
        <activity
            android:name=".ShowGrades"
            android:label="@string/title_activity_show_grades" >
        </activity>
        <activity
            android:name=".AddGrade"
            android:label="@string/title_activity_add_grade" >
        </activity>
        <activity
            android:name=".ShowLicenseActivity"
            android:label="@string/title_activity_show_license"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".AddDistribution"
            android:label="@string/title_activity_add_distribution" >
        </activity>
        <activity
            android:name=".RemoveDistribution"
            android:label="@string/title_activity_remove_distribution" >
        </activity>
        <activity
            android:name=".RemoveGrade"
            android:label="@string/title_activity_remove_grade" >
        </activity>
    </application>

</manifest>
